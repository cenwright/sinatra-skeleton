<div class="top">
  <img src="/images/logo.jpg">
    	<h1>Please login</h1>
        <form class="form-horizontal" method="POST" action="/login">

  <span class="form-group">
    <label for="login-email-field" name="login-email" class="col-sm-3 control-label">Email:</label>
    <span class="col-sm-9">
      <input type="email" class="form-control" name="email" id="login-email-field" placeholder="Email">
    </span>
  </span>

  <span class="form-group">
    <label for="login-password-field" name="email-password" class="col-sm-3 control-label">Password:</label>
    <span class="col-sm-9">
      <input type="password" class="form-control" name="password" id="login-password-field" placeholder="Password">
    </span>
  </span>
  
  <span class="form-group">
    <span class="col-sm-offset-3 col-sm-9">
      <button type="submit" class="btn btn-default btn-xs">Submit</button>
    </span>
  </span>
</form>
</div>